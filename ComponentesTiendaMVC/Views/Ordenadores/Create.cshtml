@model ComponentesTiendaMVC.Models.Ordenador

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .title {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 2%;
            color: #343a40;
        }

        .form-container {
            margin-top: 2%;
            padding-top: 1rem;
            border-top: 1px solid #dee2e6;
        }

        .form-group label {
            font-weight: bold;
            color: #343a40;
        }

        .form-group .text-danger {
            color: #dc3545;
        }

        .btn {
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        /* Adjust button colors */
        .btn-back {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff; /* Text color */
        }
    </style>
</head>
<body>

    <div class="container">
        <h4 class="title">Creación de Ordenador</h4>
        <hr />

        <div class="row form-container">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="DescripcionOrdenador" class="control-label"></label>
                        <input asp-for="DescripcionOrdenador" class="form-control" />
                        <span asp-validation-for="DescripcionOrdenador" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="componentes">Componentes:</label>
                        <select multiple class="form-control" id="componentes" name="Componentes">
                            @foreach (var componente in ViewBag.Componentes)
                            {
                                <option value="@componente.Id">@componente.Descripcion</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="btn btn-back" asp-action="OrdenadorIndex">Volver atrás</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
